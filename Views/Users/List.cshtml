@using WeightTrackerApp6.Models;
@model IQueryable<Users>

@{ ViewData["Title"] = "All User"; }

<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <h3 class="page-title">All Partners</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Default Light Table -->
    <div class="row">
        <div class="col">
            <div class="card card-small mb-4">
                <div class="card-header border-bottom ">
                    <h6 class="m-0">Partners</h6>
                    <a href="/partner/create" type="button" style="float: right" class="btn btn-sm btn-white m-0">Add Partner +</a>
                </div>
                <div class="card-body p-0 pb-3 text-center">
                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">first name</th>
                                <th scope="col" class="border-0">last name</th>
                                <th scope="col" class="border-0">Address</th>
                                <th scope="col" class="border-0">Email Address</th>
                                <th scope="col" class="border-0">Age</th>
                                <th scope="col" class="border-0">Country</th>
                                <th scope="col" class="border-0">Gender</th>
                                <th scope="col" class="border-0">City</th>
                                <th scope="col" class="border-0">Postal code</th>
                                <th scope="col" class="border-0">Username</th>

                            </tr>
                        </thead>
                        <tbody>


                            @if (Model.Any())
                            {
                                foreach (var users in Model)
                                {
                            <tr>
                                <td><a href="@Url.Action("Details","Users",new { id = users.Id })">@users.First_Name</a></td>
                                <td>@users.Last_Name</td>
                                <td>@users.Address</td>
                                <td>@users.Email</td>
                                <td>@users.Age</td>
                                <td>@users.Country</td>
                                <td>@users.City</td>
                                <td>@users.Gender</td>
                                <td>@users.Postal_code</td>
                                @*<td>@users.User_Name</td>*@
                                <td>@users.About_me</td>
                            </tr>}
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>




